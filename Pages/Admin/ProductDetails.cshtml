@page
@model NWTDb.Pages.Admin.ProductDetailsModel
@{
}

<div class="row justify-content-center">
    <div class="card col-md-8 p-3">
        <div class="text-center">
            <img class="card-img-top" src="~/images/@Model.product.prodimage" style="width:400px" />
        </div>
        <h1>
            @Model.product.ProductName
        </h1>
        <p>
            Product Code: @Model.product.ProductCode
        </p>
        <p>
            Description: @Model.product.Description
        </p>
        <p>
            Standard Cost: @Model.product.StandardCost
        </p>
        <p>
            List Price: @Model.product.ListPrice
        </p>
        <p>
            Target Level: @Model.product.TargetLevel
        </p>
        <p>
            Reorder Level: @Model.product.ReorderLevel
        </p>
        <p>
            Available Qty: @Model.product.AvailableQty
        </p>
        <p>
            Discounted: @Model.product.Discontinued
        </p>
        <p>
            Reordered: @Model.product.Reordered
        </p>
        <div id="exampleModalLive" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="exampleModalLiveLabel" style="display: none;" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLiveLabel">Are you sure?</h5>
                        <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">x</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <p>This action can not be undone.</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <form method="post">
                            <input type="hidden" name="prodID" value="@Model.product.ProductID" />
                            <button type="submit" class="btn btn-danger">Delete Product</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#exampleModalLive">
                Delete Product
            </button>
            
        </div>
    </div>
</div>
