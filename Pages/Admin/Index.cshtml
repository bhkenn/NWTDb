@page
@model NWTDb.Pages.Admin.IndexModel
@{
}

<h1>Product List</h1>

<div class="row">
    @foreach (var product in Model.ProdList)
    {
        <div class="col-md-4 mb-3">
            <div class="card">
                <img src="~/images/@product.prodimage" class="card-img-top" style="height:375px" style="width:100px" />
                <div class="card-body">
                    <h5 class="card-title">@product.ProductName</h5>

                    <p class="card-text">
                        Target Level : @product.TargetLevel
                    </p>
                    <p class="card-text">
                        Available Quantity : @product.AvailableQty
                    </p>
                </div>
                <a class="btn btn-outline-primary stretched-link" asp-page="/Admin/ProductDetails" asp-route-id="@product.ProductID">View Details</a>
            </div>
        </div>
    }
</div>

<div class="fixed-bottom text-lg-end mx-5 mb-5"><a class="btn btn-primary btn-lg text-lg-end" asp-page="CreateProduct" style="scale:1.3">+ Create</a></div>